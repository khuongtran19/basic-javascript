<%- include("../partials/header") %>
<div class="container" style="margin-top: 20px;">
    <header class="jumbotron">
        <div class="container"><h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds all over the world</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/news">Add New Campgrounds</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach((campground) => { %>
            <div class="col-md-3 col-sm-6">
                <div class="card">
                    <img src="<%= campground.image%>" class="card-img-top" alt="Responsive image">
                    <div class="card-body">
                        <div class="card-title">
                            <h4><%= campground.name %></h4>
                        </div>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More  Info</a>
                    </div>
                </div>
                
            </div>
        <% }); %>
    </div>
</div>
<%- include("../partials/footer") %>