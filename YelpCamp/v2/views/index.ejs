<%- include("partials/header") %>
<div class="container">
    <header class="jumbotron">
        <div class="container"><h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds all over the world</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/news">Add New Campgrounds</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach((campgrounds) => { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campgrounds.image%>" class="img-fluid" alt="Responsive image">
                    <div class="caption">
                        <h4><%= campgrounds.name %></h4>
                    </div>
                    <a href="/campgrounds/<%= campgrounds._id %>" class="btn btn-primary">More Info</a>
                </div>
                
            </div>
        <% }); %>
    </div>
</div>
<%- include("partials/footer") %>